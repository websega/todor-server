{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist",
    "noImplicitAny": true,
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/controllers/fileController.js"],
  "exclude": ["node_modules"]
}
